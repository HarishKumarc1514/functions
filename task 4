#include <iostream.h>
#include <stdio.h>

bool check(int n);

int main() {
    int n, i;
    bool f = false;

    cout << "Enter a positive  integer: ";
    cin >> n;

    for(i = 2; i <= n/2; ++i) {
        if (check(i)) {
            if (check(n - i)) {
                cout << n << " = " << i << " + " << n-i << endl;
                f = true;
            }
        }
    }

    if (!f)
      cout << n << " can't be expressed as sum of two prime numbers.";

    return 0;
}

bool check(int n)
{
    int i;
    bool p = true;
    if (n == 0 || n == 1)
        { P = false; }
    else {
        for(i = 2; i <= n/2; ++i) {
            if(n % i == 0) 
            {P = false;
               break ; }
        }
    }

    return P;
}


   
